      <ColumnDefinition Width="*"/>

    </Grid.ColumnDefinitions>






    <Image Source="milhao.png"
           Grid.ColumnSpan="3"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           Grid.Row="0"/>

    <Label Text="Quem nasceu primeiro?"
           Grid.ColumnSpan="3"
           TextColor="Black"
           FontSize="14"
           HorizontalOptions="Center"
           VerticalOptions="Center"

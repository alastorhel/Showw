            Grid.ColumnSpan="3"
            Grid.Row="3"/>
    <Button Text="pato"
            FontSize="12"
            BackgroundColor="Blue"
            HeightRequest="50"
            Grid.ColumnSpan="3"
            Grid.Row="4"/>
    <Button Text="ganso"
            FontSize="12"
            BackgroundColor="Blue"
            HeightRequest="50"
            Grid.ColumnSpan="3"
            Grid.Row="5"/>
    <Button Text="ornitorrinco"
            FontSize="12"
            BackgroundColor="Blue"
            HeightRequest="50"
            Grid.ColumnSpan="3"
            Grid.Row="6"/>




    <Button Text="Elimine uma questão"
            TextColor="Black"
            Grid.Column="0"
            Grid.Row="7"/>
    <Button Text="Peça a probabilidade"
            TextColor="Black"
            Grid.Column="1"
            Grid.Row="7"/>
    <Button Text="Pular"
            TextColor="Black"
            Grid.Column="2"
            Grid.Row="7"/>


  </Grid>

</ContentPage>